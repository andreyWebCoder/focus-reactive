{# rating #}
<div class="rating">
	<div class="rating__body">
		<div class="rating__active"></div>
		{% set values = ['1', '2', '3', '4', '5'] %}
		<div class="rating__items">
			{% for v in values %}
				<input type="radio" class="rating__item" value="{{v}}" name="rating" >
			{% endfor %}
		</div>

	</div>
	<div class="rating__value">4.9</div>
</div>